{{!< default}}

<header>
    <div class="post-blog-title">
        <a href="{{@blog.url}}"><i class="iconfont icon-back"></i>&nbsp;{{@blog.title}}</a>
        <div class="post-nav">
            {{navigation}}
        </div>
    </div>
</header>

<main role="main">
    <header class="post-header">
        <h1 class="post-title">{{author.name}}</h1>
        <section class="post-meta">
            {{#if author.bio}}
                {{author.bio}}
            {{else}}
                作者共有{{pagination.total}}篇文章
            {{/if}}
        </section>
    </header>

    {{> "loop"}}

</main>
